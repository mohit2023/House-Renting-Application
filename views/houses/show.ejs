<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/star.css">
<div class="row">
    <div class="col-6">

        <div id="houseCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% house.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                    <img src="<%= img.url%>" class="d-block w-100" alt="">
                </div>
                <% }) %>
                <% if(house.images.length == 0){ %>
                    <div class="carousel-item active">
                        <img src="/images/noHouseImg.png" class="d-block w-100" alt="">
                    </div>  
                <% } %>  
            </div>

            <% if(house.images.length > 1) {%>
            <a class="carousel-control-prev" href="#houseCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#houseCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= house.name%></h5>
                <p class="card-text"><%= house.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= house.address%></li>
                <li class="list-group-item">$<%= house.rent%>/month</li>
            </ul>
            <% if(currentUser && house.owner.equals(currentUser._id)){ %> 
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/houses/<%=house._id%>/edit">Edit</a>
                    <form class="d-inline" action="/houses/<%=house._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            <% } %> 
        </div>
    </div>
    <div class="col-6">

        <div id='map' style='width: 100%; height: 300px;'></div>

        <% if(currentUser){ %> 
            <h2>Leave a Review</h2>
            <form action="/houses/<%= house._id %>/reviews" method="POST" novalidate class="need-validation mb-5">
                <fieldset class="starability-basic">
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="5" checked
                        aria-label="No rating." />
                </fieldset>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="review[description]" cols="30" rows="3" required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
        <% } %> 
        <% for(let review of house.reviews){ %>
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">By <%= review.owner.username%></h6>
                    <h5 class="card-title">
                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                    </h5>
                    <p class="card-text">Review: <%= review.description %></p>
                    <% if(currentUser && review.owner.equals(currentUser._id)){ %> 
                        <form action="/houses/<%=house._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <% } %> 
                </div>
            </div>
        <% } %>  
    </div>
</div>

<script>
    const house = <%-JSON.stringify(house)%>;
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
</script>

<script src="/javascripts/showPageMap.js"></script>