<% layout('layouts/boilerplate')%>

<div class="container col-md-8 offset-2">
    <div id="map" style="width: 100%; height: 400px"></div>
</div>

<h1 class="mb-3">All Houses On Rent</h1>
<% for (let house of houses){%>
<div class="card">
    <div class="row mb-3">
        <div class="col-md-4">
            <% if(house.images.length>0){ %> 
                <img class="img-fluid" alt="" src="<%=house.images[0].url%>">
            <% }else{ %>
                <img class="img-fluid" src="/images/noHouseImg.png" alt="">
            <% } %>  
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= house.name %> </h5>
                <p class="card-text"><%= house.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= house.address%></small>
                </p>
                <a class="btn btn-primary" href="/houses/<%=house._id%>">Show Details</a>
            </div>
        </div>
    </div>
</div>
<% }%>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const houses = {features: <%- JSON.stringify(houses) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>
